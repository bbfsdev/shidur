.row
  .col-md-12
    %h2.h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'form-horizontal'}) do |f|
      .form-group
        = f.label :email, class: 'col-md-2 control-label'
        .col-md-4
          = f.email_field :email, autofocus: true, class: 'form-control'
      .form-group
        = f.label :password, class: 'col-md-2 control-label'
        .col-md-4
          = f.password_field :password, autocomplete: "off", class: 'form-control'
      - if devise_mapping.rememberable?
        .form-group
          .col-md-4.col-md-offset-2
            = f.check_box :remember_me
            = f.label :remember_me, class: 'control-label'
      .form-group
        .col-md-offset-2.col-md-4= f.submit t("devise.log_in_btn"), class: 'btn btn-default btn-success'
    = render "devise/shared/links"
