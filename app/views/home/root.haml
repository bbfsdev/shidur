.row
  .col-md-12
    %ul.nav.nav-tabs{ role: 'tablist' }
      %li
        =link_to '#roles', role: :tab, data: { toggle: :tab } do
          =image_tag image_url('multiple25.svg'), :height => 30
      %li.active
        =link_to '#users', role: :tab, data: { toggle: :tab } do
          =image_tag image_url("black302.svg"), :height => 25
      %li
        =link_to '#rooms', role: :tab, data: { toggle: :tab } do
          =image_tag image_url("stack21.svg"), :height => 25
    .tab-content
      .tab-pane.fade#roles
        .row
          .col-md-12
            = link_to image_tag('add139.svg', height: '30px'), new_role_path
        .row
          .col-md-12
            %table.stripped.table
              -Role.all.order(:name).each do |r|
                %tr
                  %td= link_to r.name, edit_role_path(r)
                  %td= r.users.count
      .tab-pane.fade.in.active#users
        

      .tab-pane.fade#rooms
        .row
          .col-md-12
            = link_to image_tag('add139.svg', height: '30px'), new_role_path
        .row
          %table.stripped.table
            - Room.all.order(:name).each do |r|
              %tr
                %td= link_to r.name, edit_room_path(r)
                %td= r.users.count
